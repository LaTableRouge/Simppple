{
	"name": "simple",
	"version": "1.0.0",
	"description": "A simple basic gutenberg theme",
	"main": "vite.config.mjs",
	"keywords": [
		"Wordpress theme",
		"Gutenberg blocks",
		"Gutenberg patterns",
		"blocks",
		"patterns",
		"theme",
		"simple"
	],
	"author": "VDIANA DEV",
	"license": "GPLv3 or later",
	"repository": {
		"url": "https://github.com/MLNOP/Simple"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"watch": "vite",
		"prod": "vite build",
		"build": "npm run prod --chore=all",
		"watch:react-blocks": "wp-scripts start --webpack-src-dir=blocks/react/src --output-path=blocks/react/build",
		"build:react-blocks": "wp-scripts build --webpack-src-dir=blocks/react/src --output-path=blocks/react/build",
		"prepare": "husky install && composer install && npm run prod && npm run build:react-blocks"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@mlnop/string-replace": "^1.0.5",
		"@wordpress/scripts": "^26.17.0",
		"autoprefixer": "^10.4.16",
		"browserslist": "^4.22.1",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-n": "^16.3.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"git-precommit-checks": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"prettier": "^3.1.0",
		"sass": "^1.69.5",
		"sass-loader": "^13.3.2",
		"stylelint": "^15.11.0",
		"stylelint-config-property-sort-order-smacss": "^9.1.0",
		"stylelint-config-sass-guidelines": "^10.0.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-order": "^6.0.3",
		"validate-branch-name": "^1.3.0",
		"vite": "^5.0.2",
		"vite-plugin-run": "^0.4.1",
		"vite-plugin-sass-glob-import": "^3.0.2",
		"vite-plugin-static-copy": "^1.0.0"
	},
	"dependencies": {
		"gridjs": "^6.0.6"
	},
	"lint-staged": {
		"assets/scss/**/*.scss": [
			"npx stylelint --allow-empty-input --fix",
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx stylelint --allow-empty-input --fix"
		],
		"blocks/**/*.scss": [
			"npx stylelint --allow-empty-input --fix",
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx stylelint --allow-empty-input --fix"
		],
		"parts/**/*.scss": [
			"npx stylelint --allow-empty-input --fix",
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx stylelint --allow-empty-input --fix"
		],
		"patterns/**/*.scss": [
			"npx stylelint --allow-empty-input --fix",
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx stylelint --allow-empty-input --fix"
		],
		"templates/**/*.scss": [
			"npx stylelint --allow-empty-input --fix",
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx stylelint --allow-empty-input --fix"
		],
		"assets/js/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"blocks/react/src/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"blocks/acf/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"blocks/core/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"blocks/woocommerce/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"parts/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"patterns/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		],
		"templates/**/*.js": [
			"npx prettier --no-error-on-unmatched-pattern --write",
			"npx eslint --no-error-on-unmatched-pattern --fix"
		]
	},
	"browserslist": [
		"last 2 version",
		"> 1%",
		"safari 5",
		"opera 12.1",
		"ios 6",
		"android 4"
	],
	"prettier": {
		"trailingComma": "none",
		"printWidth": 100000,
		"tabWidth": 2,
		"singleQuote": true,
		"semi": false,
		"bracketSpacing": true
	},
	"prettierIgnore": [],
	"stylelint": {
		"extends": [
			"stylelint-config-property-sort-order-smacss",
			"stylelint-config-sass-guidelines"
		],
		"plugins": [
			"stylelint-order"
		],
		"rules": {
			"at-rule-empty-line-before": [
				"always",
				{
					"except": [
						"blockless-after-same-name-blockless"
					],
					"ignore": [
						"after-comment",
						"first-nested"
					],
					"ignoreAtRules": [
						"else",
						"if"
					],
					"severity": "warning"
				}
			],
			"block-no-empty": true,
			"color-named": null,
			"custom-property-empty-line-before": [
				"always",
				{
					"except": [
						"after-custom-property"
					],
					"ignore": [
						"after-comment",
						"first-nested",
						"inside-single-line-block"
					],
					"severity": "warning"
				}
			],
			"declaration-empty-line-before": [
				"always",
				{
					"except": [
						"after-declaration"
					],
					"ignore": [
						"after-comment",
						"first-nested",
						"inside-single-line-block"
					],
					"severity": "warning"
				}
			],
			"declaration-no-important": [
				true,
				{
					"message": "Do you really need this to be important ? ðŸ¤”",
					"severity": "warning"
				}
			],
			"declaration-property-value-disallowed-list": null,
			"max-nesting-depth": null,
			"order/properties-alphabetical-order": null,
			"property-no-unknown": null,
			"property-no-vendor-prefix": null,
			"rule-empty-line-before": [
				"always",
				{
					"ignore": [
						"after-comment",
						"first-nested"
					],
					"severity": "warning"
				}
			],
			"scss/at-extend-no-missing-placeholder": null,
			"scss/at-function-pattern": null,
			"scss/at-import-partial-extension-blacklist": null,
			"scss/at-mixin-pattern": null,
			"scss/dollar-variable-pattern": null,
			"scss/no-global-function-names": null,
			"scss/percent-placeholder-pattern": null,
			"scss/selector-no-redundant-nesting-selector": null,
			"selector-class-pattern": null,
			"selector-disallowed-list": [
				"/\\*/",
				{
					"message": "The universal selector (*) is known to be slow ðŸ¦¥",
					"severity": "warning"
				}
			],
			"selector-max-compound-selectors": null,
			"selector-max-id": null,
			"selector-no-qualifying-type": null,
			"shorthand-property-no-redundant-values": null,
			"value-no-vendor-prefix": null
		}
	},
	"stylelintIgnore": [
		"assets/scss/abstract/**/*.scss"
	],
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true
		},
		"extends": [
			"standard",
			"eslint:recommended",
			"plugin:react/recommended"
		],
		"settings": {
			"react": {
				"version": "detect"
			}
		},
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"sourceType": "module"
		},
		"globals": {
			"wp": true,
			"jQuery": true,
			"block_params": true,
			"wpparams": true
		},
		"plugins": [
			"unused-imports",
			"simple-import-sort"
		],
		"rules": {
			"indent": [
				"warn",
				"tab",
				{
					"ObjectExpression": 1
				}
			],
			"no-tabs": [
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"object-shorthand": 0,
			"space-before-function-paren": "off",
			"comma-dangle": [
				"error",
				"only-multiline"
			],
			"generator-star-spacing": [
				"error",
				{
					"before": false,
					"after": true
				}
			],
			"unused-imports/no-unused-imports": "warn",
			"simple-import-sort/imports": "error",
			"simple-import-sort/exports": "error",
			"no-console": "warn",
			"operator-linebreak": [
				"error",
				"before"
			],
			"react/react-in-jsx-scope": "off",
			"react/prop-types": "off"
		}
	},
	"eslintIgnore": [
		"build/"
	]
}
